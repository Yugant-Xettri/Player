entrypoint = "index.ts"

hidden = [".config", "bun.lock"]
modules = ["bun-1.2", "nodejs-20"]

[nix]
channel = "stable-24_11"
packages = ["jq"]

[deployment]
build = ["sh", "-c", "bun build --target=bun --outdir=dist index.ts"]
run = ["bun", "dist/index.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 3001

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "anime-server"

[[workflows.workflow]]
name = "anime-server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun run dev"
waitForPort = 5000
